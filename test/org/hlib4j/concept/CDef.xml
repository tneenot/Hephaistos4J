	Neenot Description: Classes definition concepts -->

<!-- Root element for classes definition -->
<classes>
  <!-- Class definition -->
  <class name="ClassRef">
    <!-- Properties definition -->
    <properties>
      <!-- readonly property type with default value -->
      <property name="property_name" readonly="true">
        Property value
      </property>

      <!-- read/write property type with default value -->
      <property name="prop_read_write" readonly="false">
        Property value read write
      </property>

      <!-- read/write property type with no value -->
      <property name="prop_read_write_no_value" readonly="false"/>
    </properties>
  </class>

  <!-- Second class for implementation test -->
  <class name="SecondClass">
    <properties>
      <property name="value" readonly="true">A value</property>
      <property name="name" readonly="false"/>
    </properties>
  </class>

  <!-- Third class with different values types -->
  <class name="ThirdClass">
    <properties>
      <property name="value.str" readonly="false">A value string</property>
      <property name="value.str2" readonly="false">"Another value string"</property>
      <property name="value.float" readonly="false">45.3f</property>
      <property name="value.double" readonly="false">45.3</property>
      <property name="value.int" readonly="false">45</property>
      <property name="value.hex" readonly="false">0xff</property>
      <property name="value.date" readonly="false">#13/05/2013#</property>
      <property name="value.long" readonly="false">2L</property>
    </properties>
  </class>
</classes>
